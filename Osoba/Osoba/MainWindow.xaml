<Window x:Class="Osoba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Osoba"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="250"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="{Binding Path=Owner, Mode=OneWay}" HorizontalAlignment="Center"/>
        <Label Content="{Binding Path=Saldo, Mode=OneWay}" HorizontalAlignment="Center" Grid.Row="1"/>
        <TextBox Grid.Row="2" Text="{Binding Path=EnteredPin, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Wyplac" Command="{Binding Path=WithdrawCommand}" Grid.Row="3"/>
        <TextBox Grid.Row="4" Text="{Binding Path=EnteredWithdrawAmount, Mode=OneWayToSource}" TextAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
