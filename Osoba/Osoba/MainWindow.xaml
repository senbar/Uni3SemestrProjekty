<Window x:Class="Osoba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Osoba"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="1" Content="Imie"/>
        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=EnteredName, Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center"/>
        <Label Grid.Column="0" Grid.Row="2" Content="Rok urodzenia"/>
        <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=EnteredYear, Mode=TwoWay}" TextAlignment="Center"/>
        <Button Content="Szukaj osoby" Command="{Binding Path=FindPersonCommand}" Grid.Column="0" Grid.Row="3"/>
            <Button Content="Zapisz" Command="{Binding Path=SavePersonCommand}" Grid.Column="1" Grid.Row="3"/>
    </Grid>
</Window>
